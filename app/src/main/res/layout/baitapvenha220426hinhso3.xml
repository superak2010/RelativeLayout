<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/number4"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="#5900FF"
            android:gravity="center"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/number3"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_above="@id/number4"
            android:layout_toStartOf="@id/number4"
            android:background="#EEDD33"
            android:gravity="center"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/number2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_above="@id/number3"
            android:layout_toStartOf="@id/number3"
            android:background="#00FF00"
            android:gravity="center"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_above="@id/number2"
            android:layout_marginLeft="-70dp"
            android:layout_toStartOf="@id/number2"
            android:background="#FF0000"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/number5"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_below="@id/number4"
            android:layout_toStartOf="@id/number4"
            android:background="#83270A"
            android:gravity="center"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/number6"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_below="@id/number5"
            android:layout_toStartOf="@id/number5"
            android:background="#AC4A2C"
            android:gravity="center"
            android:text="6"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_below="@id/number6"
            android:layout_marginLeft="-70dp"
            android:layout_toStartOf="@id/number6"
            android:background="#2AC8A8"
            android:gravity="center"
            android:text="7"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>
</RelativeLayout>